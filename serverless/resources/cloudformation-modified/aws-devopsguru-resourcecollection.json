      "type": "object",
      "properties": {
        "StackNames": {
          "description": "An array of CloudFormation stack names.",
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 128,
            "pattern": "^[a-zA-Z*]+[a-zA-Z0-9-]*$"
          },
          "minItems": 1,
          "maxItems": 1000
        }
      },
      "additionalProperties": false,
