        "iotsitewise:UntagResource",
        "iotsitewise:DescribeGateway",
        "iotsitewise:ListTagsForResource"
      ]
    },
    "delete": {
      "permissions": [
        "iotsitewise:DeleteGateway"
      ]
    },
    "list": {
      "permissions": [
        "iotsitewise:ListGateways"
      ]
    }
  },
  "title": "AWSIoTSiteWiseGatewayProperties",
  "type": "object"
