        },
        {
          "$ref": "../../components/cf.functions.json#/Aws_CF_FunctionString"
        }
      ],
      "description": "Pricing rule name"
    },
    "Description": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 1024
