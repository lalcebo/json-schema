  "definitions": {
    "Tag": {
      "type": "object",
      "properties": {
        "Key": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "$ref": "../../components/cf.functions.json#/Aws_CF_FunctionString"
            }
          ]
        },
        "Value": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "$ref": "../../components/cf.functions.json#/Aws_CF_FunctionString"
            }
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "Key",
        "Value"
      ],
      "title": "TagDefinition"
    }
  },
  "properties": {
    "AuthorizerFunctionArn": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../../components/cf.functions.json#/Aws_CF_FunctionString"
        }
      ]
    },
    "AuthorizerName": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "[\\w=,@-]+",
          "minLength": 1,
          "maxLength": 128
        },
        {
          "$ref": "../../components/cf.functions.json#/Aws_CF_FunctionString"
        }
      ]
    },
    "SigningDisabled": {
      "type": "boolean"
    },
    "Status": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "ACTIVE",
            "INACTIVE"
          ]
        },
        {
          "$ref": "../../components/cf.functions.json#/Aws_CF_FunctionString"
        }
      ]
    },
    "TokenKeyName": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../../components/cf.functions.json#/Aws_CF_FunctionString"
        }
      ]
    },
    "TokenSigningPublicKeys": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "[a-zA-Z0-9:_-]+": {
          "type": "string",
          "maxLength": 5120
        }
      }
    },
    "EnableCachingForHttp": {
      "type": "boolean"
    },
    "Tags": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Tag"
      }
    }
  },
  "taggable": true,
  "additionalProperties": false,
  "required": [
