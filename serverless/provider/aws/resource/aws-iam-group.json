{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Resource Type definition for AWS::IAM::Group",
  "definitions": {
    "Policy": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "PolicyDocument": {
          "description": "The policy document.",
          "type": [
            "string",
            "object"
          ]
        },
        "PolicyName": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ],
          "description": "The friendly name (not ARN) identifying the policy."
        }
      },
      "required": [
        "PolicyDocument",
        "PolicyName"
      ]
    }
  },
  "properties": {
    "Arn": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "The Arn of the group to create"
    },
    "GroupName": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "The name of the group to create"
    },
    "ManagedPolicyArns": {
      "description": "A list of Amazon Resource Names (ARNs) of the IAM managed policies that you want to attach to the role. ",
      "type": "array",
      "uniqueItems": true,
      "insertionOrder": false,
      "items": {
        "type": "string"
      }
    },
    "Path": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "The path to the group"
    },
    "Policies": {
      "description": "Adds or updates an inline policy document that is embedded in the specified IAM group",
      "type": "array",
      "uniqueItems": false,
      "insertionOrder": false,
      "items": {
        "$ref": "#/definitions/Policy"
      }
    }
  },
  "additionalProperties": false
}