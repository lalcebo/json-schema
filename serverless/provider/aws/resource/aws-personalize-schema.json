{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Resource schema for AWS::Personalize::Schema.",
  "properties": {
    "Name": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 63,
          "pattern": "^[a-zA-Z0-9][a-zA-Z0-9\\-_]*"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "Name for the schema."
    },
    "SchemaArn": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 256,
          "pattern": "arn:([a-z\\d-]+):personalize:.*:.*:.+"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "Arn for the schema."
    },
    "Schema": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 10000
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "A schema in Avro JSON format."
    },
    "Domain": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "ECOMMERCE",
            "VIDEO_ON_DEMAND"
          ]
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "The domain of a Domain dataset group."
    }
  },
  "additionalProperties": false,
  "required": [
    "Name",
    "Schema"
  ]
}