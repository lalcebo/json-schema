{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "The AWS::Amplify::App resource creates Apps in the Amplify Console. An App is a collection of branches.",
  "additionalProperties": false,
  "properties": {
    "AccessToken": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "AppId": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 20,
          "pattern": "d[a-z0-9]+"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "AppName": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 255,
          "pattern": "(?s).+"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "Arn": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 1000,
          "pattern": "(?s).*"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "AutoBranchCreationConfig": {
      "$ref": "#/definitions/AutoBranchCreationConfig"
    },
    "BasicAuthConfig": {
      "$ref": "#/definitions/BasicAuthConfig"
    },
    "BuildSpec": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 25000,
          "pattern": "(?s).+"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "CustomHeaders": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 0,
          "maxLength": 25000,
          "pattern": "(?s).*"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "CustomRules": {
      "type": "array",
      "uniqueItems": false,
      "items": {
        "$ref": "#/definitions/CustomRule"
      }
    },
    "DefaultDomain": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 0,
          "maxLength": 1000
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "Description": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 1000,
          "pattern": "(?s).*"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "EnableBranchAutoDeletion": {
      "type": "boolean"
    },
    "EnvironmentVariables": {
      "type": "array",
      "uniqueItems": false,
      "items": {
        "$ref": "#/definitions/EnvironmentVariable"
      }
    },
    "IAMServiceRole": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 1000,
          "pattern": "(?s).*"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "Name": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 255,
          "pattern": "(?s).+"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "OauthToken": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 1000,
          "pattern": "(?s).*"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "Platform": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "WEB",
            "WEB_DYNAMIC",
            "WEB_COMPUTE"
          ]
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "Repository": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "(?s).*"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "Tags": {
      "type": "array",
      "uniqueItems": false,
      "items": {
        "$ref": "#/definitions/Tag"
      }
    }
  },
  "definitions": {
    "AutoBranchCreationConfig": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "AutoBranchCreationPatterns": {
          "type": "array",
          "uniqueItems": false,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 2048
          }
        },
        "BasicAuthConfig": {
          "$ref": "#/definitions/BasicAuthConfig"
        },
        "BuildSpec": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1,
              "maxLength": 25000
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        },
        "EnableAutoBranchCreation": {
          "type": "boolean"
        },
        "EnableAutoBuild": {
          "type": "boolean"
        },
        "EnablePerformanceMode": {
          "type": "boolean"
        },
        "EnablePullRequestPreview": {
          "type": "boolean"
        },
        "EnvironmentVariables": {
          "type": "array",
          "uniqueItems": false,
          "items": {
            "$ref": "#/definitions/EnvironmentVariable"
          }
        },
        "Framework": {
          "oneOf": [
            {
              "type": "string",
              "maxLength": 255,
              "pattern": "(?s).*"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        },
        "PullRequestEnvironmentName": {
          "oneOf": [
            {
              "type": "string",
              "maxLength": 20,
              "pattern": "(?s).*"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        },
        "Stage": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "EXPERIMENTAL",
                "BETA",
                "PULL_REQUEST",
                "PRODUCTION",
                "DEVELOPMENT"
              ]
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        }
      }
    },
    "BasicAuthConfig": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "EnableBasicAuth": {
          "type": "boolean"
        },
        "Username": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1,
              "maxLength": 255
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        },
        "Password": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1,
              "maxLength": 255
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        }
      }
    },
    "CustomRule": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "Condition": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 0,
              "maxLength": 2048,
              "pattern": "(?s).*"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        },
        "Status": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 3,
              "maxLength": 7,
              "pattern": ".{3,7}"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        },
        "Target": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1,
              "maxLength": 2048,
              "pattern": "(?s).+"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        },
        "Source": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1,
              "maxLength": 2048,
              "pattern": "(?s).+"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        }
      },
      "required": [
        "Target",
        "Source"
      ]
    },
    "EnvironmentVariable": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "Name": {
          "oneOf": [
            {
              "type": "string",
              "maxLength": 255,
              "pattern": "(?s).*"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        },
        "Value": {
          "oneOf": [
            {
              "type": "string",
              "maxLength": 5500,
              "pattern": "(?s).*"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        }
      },
      "required": [
        "Name",
        "Value"
      ]
    },
    "Tag": {
      "type": "object",
      "additionalProperties": false,
      "insertionOrder": false,
      "properties": {
        "Key": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1,
              "maxLength": 128,
              "pattern": "^(?!aws:)[a-zA-Z+-=._:/]+$"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        },
        "Value": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 0,
              "maxLength": 256
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        }
      },
      "required": [
        "Key",
        "Value"
      ]
    }
  },
  "required": [
    "Name"
  ]
}