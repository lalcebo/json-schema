{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Definition of AWS::RefactorSpaces::Route Resource Type",
  "definitions": {
    "RouteActivationState": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "INACTIVE",
            "ACTIVE"
          ]
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "Method": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "DELETE",
            "GET",
            "HEAD",
            "OPTIONS",
            "PATCH",
            "POST",
            "PUT"
          ]
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "RouteType": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "DEFAULT",
            "URI_PATH"
          ]
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "DefaultRouteInput": {
      "type": "object",
      "properties": {
        "ActivationState": {
          "$ref": "#/definitions/RouteActivationState"
        }
      },
      "required": [
        "ActivationState"
      ],
      "additionalProperties": false
    },
    "UriPathRouteInput": {
      "type": "object",
      "properties": {
        "SourcePath": {
          "oneOf": [
            {
              "type": "string",
              "maxLength": 2048,
              "minLength": 1,
              "pattern": "^(/([a-zA-Z0-9._:-]+|\\{[a-zA-Z0-9._:-]+\\}))+$"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        },
        "ActivationState": {
          "$ref": "#/definitions/RouteActivationState"
        },
        "Methods": {
          "type": "array",
          "insertionOrder": false,
          "items": {
            "$ref": "#/definitions/Method"
          }
        },
        "IncludeChildPaths": {
          "type": "boolean"
        },
        "AppendSourcePath": {
          "type": "boolean"
        }
      },
      "required": [
        "ActivationState"
      ],
      "additionalProperties": false
    },
    "Tag": {
      "description": "A label for tagging Environment resource",
      "type": "object",
      "properties": {
        "Key": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1,
              "maxLength": 128,
              "pattern": "^(?!aws:).+"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ],
          "description": "A string used to identify this tag"
        },
        "Value": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 0,
              "maxLength": 256
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ],
          "description": "A string containing the value for the tag"
        }
      },
      "required": [
        "Key",
        "Value"
      ],
      "additionalProperties": false
    }
  },
  "properties": {
    "PathResourceToId": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "Arn": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 20,
          "maxLength": 2048,
          "pattern": "^arn:(aws[a-zA-Z-]*)?:refactor-spaces:[a-zA-Z0-9\\-]+:\\w{12}:[a-zA-Z_0-9+=,.@\\-_/]+$"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "ApplicationIdentifier": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 14,
          "minLength": 14,
          "pattern": "^app-([0-9A-Za-z]{10}$)"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "EnvironmentIdentifier": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 14,
          "minLength": 14,
          "pattern": "^env-([0-9A-Za-z]{10}$)"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "RouteIdentifier": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 14,
          "minLength": 14,
          "pattern": "^rte-([0-9A-Za-z]{10}$)"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "RouteType": {
      "$ref": "#/definitions/RouteType"
    },
    "ServiceIdentifier": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 14,
          "minLength": 14,
          "pattern": "^svc-([0-9A-Za-z]{10}$)"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "DefaultRoute": {
      "$ref": "#/definitions/DefaultRouteInput"
    },
    "UriPathRoute": {
      "$ref": "#/definitions/UriPathRouteInput"
    },
    "Tags": {
      "type": "array",
      "insertionOrder": false,
      "items": {
        "$ref": "#/definitions/Tag"
      },
      "description": "Metadata that you can assign to help organize the frameworks that you create. Each tag is a key-value pair."
    }
  },
  "required": [
    "EnvironmentIdentifier",
    "ApplicationIdentifier",
    "ServiceIdentifier",
    "RouteType"
  ],
  "additionalProperties": false,
  "taggable": true
}