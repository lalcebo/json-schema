{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Resource schema for AWS::DataBrew::Ruleset.",
  "taggable": true,
  "definitions": {
    "Expression": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 4,
          "maxLength": 1024,
          "pattern": "^[><0-9A-Za-z_.,:)(!= ]+$"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "Expression with rule conditions"
    },
    "SubstitutionValue": {
      "description": "A key-value pair to associate expression's substitution variable names with their values",
      "type": "object",
      "properties": {
        "ValueReference": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 2,
              "maxLength": 128,
              "pattern": "^:[A-Za-z0-9_]+$"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ],
          "description": "Variable name"
        },
        "Value": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 0,
              "maxLength": 1024
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ],
          "description": "Value or column name"
        }
      },
      "additionalProperties": false,
      "required": [
        "ValueReference",
        "Value"
      ]
    },
    "ValuesMap": {
      "type": "array",
      "insertionOrder": true,
      "items": {
        "$ref": "#/definitions/SubstitutionValue"
      }
    },
    "ThresholdValue": {
      "description": "Threshold value for a rule",
      "type": "number"
    },
    "ThresholdType": {
      "oneOf": [
        {
          "enum": [
            "GREATER_THAN_OR_EQUAL",
            "LESS_THAN_OR_EQUAL",
            "GREATER_THAN",
            "LESS_THAN"
          ],
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "Threshold type for a rule"
    },
    "ThresholdUnit": {
      "oneOf": [
        {
          "enum": [
            "COUNT",
            "PERCENTAGE"
          ],
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "Threshold unit for a rule"
    },
    "Threshold": {
      "type": "object",
      "properties": {
        "Value": {
          "$ref": "#/definitions/ThresholdValue"
        },
        "Type": {
          "$ref": "#/definitions/ThresholdType"
        },
        "Unit": {
          "$ref": "#/definitions/ThresholdUnit"
        }
      },
      "required": [
        "Value"
      ],
      "additionalProperties": false
    },
    "ColumnSelector": {
      "description": "Selector of a column from a dataset for profile job configuration. One selector includes either a column name or a regular expression",
      "type": "object",
      "properties": {
        "Regex": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1,
              "maxLength": 255
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ],
          "description": "A regular expression for selecting a column from a dataset"
        },
        "Name": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1,
              "maxLength": 255
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ],
          "description": "The name of a column from a dataset"
        }
      },
      "additionalProperties": false
    },
    "Disabled": {
      "description": "Boolean value to disable/enable a rule",
      "type": "boolean"
    },
    "Rule": {
      "description": "Data quality rule for a target resource (dataset)",
      "type": "object",
      "properties": {
        "Name": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1,
              "maxLength": 128
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ],
          "description": "Name of the rule"
        },
        "Disabled": {
          "$ref": "#/definitions/Disabled"
        },
        "CheckExpression": {
          "$ref": "#/definitions/Expression"
        },
        "SubstitutionMap": {
          "$ref": "#/definitions/ValuesMap"
        },
        "Threshold": {
          "$ref": "#/definitions/Threshold"
        },
        "ColumnSelectors": {
          "type": "array",
          "insertionOrder": true,
          "items": {
            "$ref": "#/definitions/ColumnSelector"
          },
          "minItems": 1
        }
      },
      "required": [
        "Name",
        "CheckExpression"
      ],
      "additionalProperties": false
    },
    "Tag": {
      "description": "A key-value pair to associate with a resource",
      "type": "object",
      "properties": {
        "Key": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1,
              "maxLength": 128
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        },
        "Value": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 0,
              "maxLength": 256
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "Value",
        "Key"
      ]
    }
  },
  "properties": {
    "Name": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "Name of the Ruleset"
    },
    "Description": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 1024
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "Description of the Ruleset"
    },
    "TargetArn": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 20,
          "maxLength": 2048
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "Arn of the target resource (dataset) to apply the ruleset to"
    },
    "Rules": {
      "description": "List of the data quality rules in the ruleset",
      "type": "array",
      "insertionOrder": true,
      "items": {
        "$ref": "#/definitions/Rule"
      },
      "minItems": 1
    },
    "Tags": {
      "type": "array",
      "insertionOrder": false,
      "uniqueItems": false,
      "items": {
        "$ref": "#/definitions/Tag"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "Name",
    "TargetArn",
    "Rules"
  ]
}