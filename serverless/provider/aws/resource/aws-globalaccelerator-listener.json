{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Resource Type definition for AWS::GlobalAccelerator::Listener",
  "definitions": {
    "Port": {
      "description": "A network port number",
      "type": "integer",
      "minimum": 0,
      "maximum": 65535
    },
    "PortRange": {
      "description": "A port range to support for connections from  clients to your accelerator.",
      "type": "object",
      "properties": {
        "FromPort": {
          "$ref": "#/definitions/Port"
        },
        "ToPort": {
          "$ref": "#/definitions/Port"
        }
      },
      "required": [
        "FromPort",
        "ToPort"
      ],
      "additionalProperties": false
    }
  },
  "properties": {
    "ListenerArn": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "The Amazon Resource Name (ARN) of the listener."
    },
    "AcceleratorArn": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "The Amazon Resource Name (ARN) of the accelerator."
    },
    "PortRanges": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/PortRange"
      }
    },
    "Protocol": {
      "oneOf": [
        {
          "type": "string",
          "default": "TCP",
          "enum": [
            "TCP",
            "UDP"
          ]
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "The protocol for the listener."
    },
    "ClientAffinity": {
      "oneOf": [
        {
          "type": "string",
          "default": "NONE",
          "enum": [
            "NONE",
            "SOURCE_IP"
          ]
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "Client affinity lets you direct all requests from a user to the same endpoint."
    }
  },
  "required": [
    "AcceleratorArn",
    "PortRanges",
    "Protocol"
  ],
  "additionalProperties": false
}