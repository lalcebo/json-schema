{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Resource Type definition for AWS::WAF::WebACL",
  "additionalProperties": false,
  "properties": {
    "Id": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "DefaultAction": {
      "$ref": "#/definitions/WafAction"
    },
    "MetricName": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "Name": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "Rules": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "$ref": "#/definitions/ActivatedRule"
      }
    }
  },
  "definitions": {
    "ActivatedRule": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "Action": {
          "$ref": "#/definitions/WafAction"
        },
        "Priority": {
          "type": "integer"
        },
        "RuleId": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        }
      },
      "required": [
        "Priority",
        "RuleId"
      ]
    },
    "WafAction": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "Type": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        }
      },
      "required": [
        "Type"
      ]
    }
  },
  "required": [
    "DefaultAction",
    "MetricName",
    "Name"
  ]
}