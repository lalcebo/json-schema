{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "The resource schema for AWSLogs QueryDefinition",
  "definitions": {
    "LogGroup": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "[\\.\\-_/#A-Za-z0-9]+",
          "minLength": 1,
          "maxLength": 512
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    }
  },
  "properties": {
    "Name": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "A name for the saved query definition"
    },
    "QueryString": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 10000
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "The query string to use for this definition"
    },
    "LogGroupNames": {
      "description": "Optionally define specific log groups as part of your query definition",
      "type": "array",
      "insertionOrder": false,
      "items": {
        "description": "LogGroup name",
        "$ref": "#/definitions/LogGroup"
      }
    },
    "QueryDefinitionId": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 0,
          "maxLength": 256
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "Unique identifier of a query definition"
    }
  },
  "required": [
    "Name",
    "QueryString"
  ],
  "additionalProperties": false
}