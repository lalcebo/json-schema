{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "<p>Represents a resource-based policy that allows or denies access to a channel.</p>",
  "properties": {
    "ChannelGroupName": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 256,
          "minLength": 1,
          "pattern": "^[a-zA-Z0-9_-]+$"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "ChannelName": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 256,
          "minLength": 1,
          "pattern": "^[a-zA-Z0-9_-]+$"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "Policy": {
      "type": [
        "object",
        "string"
      ]
    }
  },
  "required": [
    "ChannelGroupName",
    "ChannelName",
    "Policy"
  ],
  "additionalProperties": false
}