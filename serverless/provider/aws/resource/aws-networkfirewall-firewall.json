{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Resource type definition for AWS::NetworkFirewall::Firewall",
  "additionalProperties": false,
  "definitions": {
    "ResourceArn": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^arn:aws.*$",
          "minLength": 1,
          "maxLength": 256
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "A resource ARN."
    },
    "EndpointId": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "An endpoint Id."
    },
    "SubnetMapping": {
      "type": "object",
      "properties": {
        "SubnetId": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ],
          "description": "A SubnetId."
        },
        "IPAddressType": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ],
          "description": "A IPAddressType"
        }
      },
      "required": [
        "SubnetId"
      ],
      "additionalProperties": false
    },
    "Tag": {
      "type": "object",
      "properties": {
        "Key": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1,
              "maxLength": 128
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        },
        "Value": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 0,
              "maxLength": 255
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        }
      },
      "required": [
        "Value",
        "Key"
      ],
      "additionalProperties": false
    }
  },
  "properties": {
    "FirewallName": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 128,
          "pattern": "^[a-zA-Z0-9-]+$"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "FirewallArn": {
      "$ref": "#/definitions/ResourceArn"
    },
    "FirewallId": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 36,
          "maxLength": 36,
          "pattern": "^([0-9a-f]{8})-([0-9a-f]{4}-){3}([0-9a-f]{12})$"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "FirewallPolicyArn": {
      "$ref": "#/definitions/ResourceArn"
    },
    "VpcId": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 128,
          "pattern": "^vpc-[0-9a-f]+$"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "SubnetMappings": {
      "type": "array",
      "minItems": 1,
      "insertionOrder": false,
      "uniqueItems": true,
      "items": {
        "$ref": "#/definitions/SubnetMapping"
      }
    },
    "DeleteProtection": {
      "type": "boolean"
    },
    "SubnetChangeProtection": {
      "type": "boolean"
    },
    "FirewallPolicyChangeProtection": {
      "type": "boolean"
    },
    "Description": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 512,
          "pattern": "^.*$"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "EndpointIds": {
      "type": "array",
      "insertionOrder": false,
      "items": {
        "$ref": "#/definitions/EndpointId"
      }
    },
    "Tags": {
      "type": "array",
      "insertionOrder": false,
      "uniqueItems": true,
      "items": {
        "$ref": "#/definitions/Tag"
      }
    }
  },
  "required": [
    "FirewallName",
    "FirewallPolicyArn",
    "VpcId",
    "SubnetMappings"
  ]
}