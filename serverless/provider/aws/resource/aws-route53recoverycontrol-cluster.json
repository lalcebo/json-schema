{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "AWS Route53 Recovery Control Cluster resource schema",
  "taggable": true,
  "definitions": {
    "ClusterEndpoint": {
      "type": "object",
      "properties": {
        "Endpoint": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1,
              "maxLength": 128
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        },
        "Region": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1,
              "maxLength": 32
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "Tag": {
      "type": "object",
      "properties": {
        "Key": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1,
              "maxLength": 128
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        },
        "Value": {
          "oneOf": [
            {
              "type": "string",
              "maxLength": 256
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        }
      },
      "required": [
        "Value",
        "Key"
      ],
      "additionalProperties": false
    }
  },
  "properties": {
    "Name": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 64
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "Name of a Cluster. You can use any non-white space character in the name"
    },
    "ClusterArn": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 2048
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "The Amazon Resource Name (ARN) of the cluster."
    },
    "Status": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "PENDING",
            "DEPLOYED",
            "PENDING_DELETION"
          ]
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "Deployment status of a resource. Status can be one of the following: PENDING, DEPLOYED, PENDING_DELETION."
    },
    "ClusterEndpoints": {
      "description": "Endpoints for the cluster.",
      "type": "array",
      "items": {
        "$ref": "#/definitions/ClusterEndpoint"
      },
      "insertionOrder": false
    },
    "Tags": {
      "description": "A collection of tags associated with a resource",
      "type": "array",
      "items": {
        "$ref": "#/definitions/Tag",
        "maxItems": 20
      },
      "insertionOrder": false
    }
  },
  "required": [
    "Name"
  ],
  "additionalProperties": false
}