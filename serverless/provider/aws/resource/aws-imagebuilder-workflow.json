{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Resource schema for AWS::ImageBuilder::Workflow",
  "properties": {
    "Arn": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "The Amazon Resource Name (ARN) of the workflow."
    },
    "Name": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "The name of the workflow."
    },
    "Version": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "The version of the workflow."
    },
    "Description": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "The description of the workflow."
    },
    "ChangeDescription": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "The change description of the workflow."
    },
    "Type": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "BUILD",
            "TEST",
            "DISTRIBUTION"
          ]
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "The type of the workflow denotes whether the workflow is used to build, test, or distribute."
    },
    "Data": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 16000
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "The data of the workflow."
    },
    "Uri": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "The uri of the workflow."
    },
    "KmsKeyId": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "The KMS key identifier used to encrypt the workflow."
    },
    "Tags": {
      "description": "The tags associated with the workflow.",
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        ".{1,}": {
          "type": "string"
        }
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "Name",
    "Type",
    "Version"
  ],
  "oneOf": [
    {
      "required": [
        "Data"
      ]
    },
    {
      "required": [
        "Uri"
      ]
    }
  ]
}