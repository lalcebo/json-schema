{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Definition of AWS::BackupGateway::Hypervisor Resource Type",
  "definitions": {
    "HypervisorState": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "PENDING",
            "ONLINE",
            "OFFLINE",
            "ERROR"
          ]
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "SyncMetadataStatus": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "PENDING",
            "IN_PROGRESS",
            "FAILED",
            "SUCCEEDED"
          ]
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "Tag": {
      "type": "object",
      "properties": {
        "Key": {
          "oneOf": [
            {
              "type": "string",
              "maxLength": 128,
              "minLength": 1,
              "pattern": "^([\\p{L}\\p{Z}\\p{N}_.:/=+\\-@]*)$"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        },
        "Value": {
          "oneOf": [
            {
              "type": "string",
              "maxLength": 256,
              "minLength": 0,
              "pattern": "^[^\\x00]*$"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        }
      },
      "required": [
        "Key",
        "Value"
      ],
      "additionalProperties": false
    }
  },
  "properties": {
    "Host": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 128,
          "minLength": 3,
          "pattern": "^.+$"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "HypervisorArn": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 500,
          "minLength": 50,
          "pattern": "^arn:(aws|aws-cn|aws-us-gov):backup-gateway(:[a-zA-Z-0-9]+){3}\\/[a-zA-Z-0-9]+$"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "KmsKeyArn": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 500,
          "minLength": 50,
          "pattern": "^(^arn:(aws|aws-cn|aws-us-gov):kms:([a-zA-Z0-9-]+):([0-9]+):(key|alias)/(\\S+)$)|(^alias/(\\S+)$)$"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "LogGroupArn": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 2048,
          "minLength": 0,
          "pattern": "^$|^arn:(aws|aws-cn|aws-us-gov):logs:([a-zA-Z0-9-]+):([0-9]+):log-group:[a-zA-Z0-9_\\-\\/\\.]+:\\*$"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "Name": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 100,
          "minLength": 1,
          "pattern": "^[a-zA-Z0-9-]*$"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "Password": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 100,
          "minLength": 1,
          "pattern": "^[ -~]+$"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "Tags": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Tag"
      }
    },
    "Username": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 100,
          "minLength": 1,
          "pattern": "^[ -\\.0-\\[\\]-~]*[!-\\.0-\\[\\]-~][ -\\.0-\\[\\]-~]*$"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    }
  },
  "additionalProperties": false
}