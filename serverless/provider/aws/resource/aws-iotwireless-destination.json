{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Destination's resource schema demonstrating some basic constructs and validation rules.",
  "definitions": {
    "Tag": {
      "type": "object",
      "properties": {
        "Key": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1,
              "maxLength": 127
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        },
        "Value": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1,
              "maxLength": 255
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "properties": {
    "Name": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "[a-zA-Z0-9:_-]+",
          "maxLength": 128
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "Unique name of destination"
    },
    "Expression": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "Destination expression"
    },
    "ExpressionType": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "RuleName",
            "MqttTopic",
            "SnsTopic"
          ]
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "Must be RuleName"
    },
    "Description": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 2048
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "Destination description"
    },
    "Tags": {
      "description": "A list of key-value pairs that contain metadata for the destination.",
      "type": "array",
      "uniqueItems": true,
      "maxItems": 200,
      "insertionOrder": false,
      "items": {
        "$ref": "#/definitions/Tag"
      }
    },
    "RoleArn": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 20,
          "maxLength": 2048
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "AWS role ARN that grants access"
    },
    "Arn": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "Destination arn. Returned after successful create."
    }
  },
  "additionalProperties": false,
  "required": [
    "Name",
    "Expression",
    "ExpressionType"
  ],
  "taggable": true
}