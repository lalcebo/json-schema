{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Resource Type definition for AWS::ECS::CapacityProvider.",
  "definitions": {
    "ManagedScaling": {
      "description": "The managed scaling settings for the Auto Scaling group capacity provider.",
      "type": "object",
      "properties": {
        "MinimumScalingStepSize": {
          "type": "integer"
        },
        "MaximumScalingStepSize": {
          "type": "integer"
        },
        "Status": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "DISABLED",
                "ENABLED"
              ]
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        },
        "TargetCapacity": {
          "type": "integer"
        },
        "InstanceWarmupPeriod": {
          "type": "integer"
        }
      },
      "additionalProperties": false
    },
    "AutoScalingGroupProvider": {
      "type": "object",
      "properties": {
        "AutoScalingGroupArn": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        },
        "ManagedScaling": {
          "$ref": "#/definitions/ManagedScaling"
        },
        "ManagedTerminationProtection": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "DISABLED",
                "ENABLED"
              ]
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        },
        "ManagedDraining": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "DISABLED",
                "ENABLED"
              ]
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        }
      },
      "required": [
        "AutoScalingGroupArn"
      ],
      "additionalProperties": false
    },
    "Tag": {
      "type": "object",
      "properties": {
        "Key": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        },
        "Value": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "properties": {
    "AutoScalingGroupProvider": {
      "$ref": "#/definitions/AutoScalingGroupProvider"
    },
    "Name": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "Tags": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Tag"
      }
    }
  },
  "additionalProperties": false,
  "propertyTransform": {
    "/properties/AutoScalingGroupProvider/AutoScalingGroupArn": "$split(AutoScalingGroupProvider.AutoScalingGroupArn, \"autoScalingGroupName/\")[-1] $OR $split(AutoScalingGroupArn, \"autoScalingGroupName/\")[-1]"
  },
  "required": [
    "AutoScalingGroupProvider"
  ]
}