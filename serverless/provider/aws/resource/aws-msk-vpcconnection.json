{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Resource Type definition for AWS::MSK::VpcConnection",
  "definitions": {
    "Authentication": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 3,
          "maxLength": 10,
          "enum": [
            "SASL_IAM",
            "SASL_SCRAM",
            "TLS"
          ]
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "The type of private link authentication"
    },
    "ClientSubnets": {
      "type": "array",
      "uniqueItems": false,
      "insertionOrder": false,
      "items": {
        "type": "string",
        "pattern": "^(subnet-)([a-z0-9]+)\\Z"
      }
    },
    "SecurityGroups": {
      "type": "array",
      "uniqueItems": false,
      "insertionOrder": false,
      "items": {
        "type": "string",
        "pattern": "^(sg-)([a-z0-9]+)\\Z"
      }
    },
    "Tags": {
      "type": "object",
      "description": "A key-value pair to associate with a resource.",
      "patternProperties": {
        "^([\\p{L}\\p{Z}\\p{N}_.:/=+\\-@]*)$": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "VpcId": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^(vpc-)([a-z0-9]+)\\Z"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    }
  },
  "properties": {
    "Arn": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "Authentication": {
      "$ref": "#/definitions/Authentication"
    },
    "ClientSubnets": {
      "$ref": "#/definitions/ClientSubnets"
    },
    "TargetClusterArn": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^arn:[\\w-]+:kafka:[\\w-]+:\\d+:cluster.*\\Z"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ],
      "description": "The Amazon Resource Name (ARN) of the target cluster"
    },
    "SecurityGroups": {
      "$ref": "#/definitions/SecurityGroups"
    },
    "Tags": {
      "$ref": "#/definitions/Tags"
    },
    "VpcId": {
      "$ref": "#/definitions/VpcId"
    }
  },
  "additionalProperties": false,
  "required": [
    "Authentication",
    "ClientSubnets",
    "SecurityGroups",
    "TargetClusterArn",
    "VpcId"
  ]
}