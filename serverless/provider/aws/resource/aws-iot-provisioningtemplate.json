{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Creates a fleet provisioning template.",
  "definitions": {
    "ProvisioningHook": {
      "type": "object",
      "properties": {
        "TargetArn": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        },
        "PayloadVersion": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        }
      }
    },
    "Tag": {
      "type": "object",
      "properties": {
        "Key": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        },
        "Value": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "Key",
        "Value"
      ]
    }
  },
  "properties": {
    "TemplateArn": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "TemplateName": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^[0-9A-Za-z_-]+$",
          "minLength": 1,
          "maxLength": 36
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "Description": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 500
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "Enabled": {
      "type": "boolean"
    },
    "ProvisioningRoleArn": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "TemplateBody": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "TemplateType": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "FLEET_PROVISIONING",
            "JITP"
          ]
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "PreProvisioningHook": {
      "$ref": "#/definitions/ProvisioningHook"
    },
    "Tags": {
      "type": "array",
      "insertionOrder": true,
      "items": {
        "$ref": "#/definitions/Tag"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "ProvisioningRoleArn",
    "TemplateBody"
  ]
}