{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Creates an authorizer.",
  "definitions": {
    "Tag": {
      "type": "object",
      "properties": {
        "Key": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        },
        "Value": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "Key",
        "Value"
      ]
    }
  },
  "properties": {
    "AuthorizerFunctionArn": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "Arn": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "AuthorizerName": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "[\\w=,@-]+",
          "minLength": 1,
          "maxLength": 128
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "SigningDisabled": {
      "type": "boolean"
    },
    "Status": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "ACTIVE",
            "INACTIVE"
          ]
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "TokenKeyName": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "TokenSigningPublicKeys": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "[a-zA-Z0-9:_-]+": {
          "type": "string",
          "maxLength": 5120
        }
      }
    },
    "EnableCachingForHttp": {
      "type": "boolean"
    },
    "Tags": {
      "type": "array",
      "insertionOrder": true,
      "items": {
        "$ref": "#/definitions/Tag"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "AuthorizerFunctionArn"
  ]
}