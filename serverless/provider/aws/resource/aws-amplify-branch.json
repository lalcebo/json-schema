{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "The AWS::Amplify::Branch resource creates a new branch within an app.",
  "additionalProperties": false,
  "properties": {
    "AppId": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 20,
          "pattern": "d[a-z0-9]+"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "Arn": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 1000,
          "pattern": "(?s).*"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "BasicAuthConfig": {
      "$ref": "#/definitions/BasicAuthConfig"
    },
    "Backend": {
      "$ref": "#/definitions/Backend"
    },
    "BranchName": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 255,
          "pattern": "(?s).+"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "BuildSpec": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 25000,
          "pattern": "(?s).+"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "Description": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 1000,
          "pattern": "(?s).*"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "EnableAutoBuild": {
      "type": "boolean"
    },
    "EnablePerformanceMode": {
      "type": "boolean"
    },
    "EnablePullRequestPreview": {
      "type": "boolean"
    },
    "EnvironmentVariables": {
      "type": "array",
      "uniqueItems": false,
      "items": {
        "$ref": "#/definitions/EnvironmentVariable"
      }
    },
    "Framework": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 255,
          "pattern": "(?s).*"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "PullRequestEnvironmentName": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 20,
          "pattern": "(?s).*"
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "Stage": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "EXPERIMENTAL",
            "BETA",
            "PULL_REQUEST",
            "PRODUCTION",
            "DEVELOPMENT"
          ]
        },
        {
          "$ref": "../component/functions.json#/AwsFunctionString"
        }
      ]
    },
    "Tags": {
      "type": "array",
      "uniqueItems": false,
      "items": {
        "$ref": "#/definitions/Tag"
      }
    }
  },
  "definitions": {
    "Backend": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "StackArn": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 20,
              "maxLength": 2048
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        }
      }
    },
    "EnvironmentVariable": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "Name": {
          "oneOf": [
            {
              "type": "string",
              "maxLength": 255,
              "pattern": "(?s).*"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        },
        "Value": {
          "oneOf": [
            {
              "type": "string",
              "maxLength": 5500,
              "pattern": "(?s).*"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        }
      },
      "required": [
        "Name",
        "Value"
      ]
    },
    "Tag": {
      "type": "object",
      "additionalProperties": false,
      "insertionOrder": false,
      "properties": {
        "Key": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1,
              "maxLength": 128,
              "pattern": "^(?!aws:)[a-zA-Z+-=._:/]+$"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        },
        "Value": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 0,
              "maxLength": 256,
              "pattern": "^([\\p{L}\\p{Z}\\p{N}_.:/=+\\-@]*)$"
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        }
      },
      "required": [
        "Key",
        "Value"
      ]
    },
    "BasicAuthConfig": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "EnableBasicAuth": {
          "type": "boolean"
        },
        "Username": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1,
              "maxLength": 255
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        },
        "Password": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1,
              "maxLength": 255
            },
            {
              "$ref": "../component/functions.json#/AwsFunctionString"
            }
          ]
        }
      },
      "required": [
        "Username",
        "Password"
      ]
    }
  },
  "required": [
    "AppId",
    "BranchName"
  ]
}