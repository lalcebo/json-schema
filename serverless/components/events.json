{
  "id": "https://raw.githubusercontent.com/lalcebo/json-schema/master/serverless/components/events.json",
  "schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Sub schema containing definitions for Events",
  "additionalProperties": false,
  "AwsActiveMq": {
    "type": "object",
    "properties": {
      "arn": {
        "anyOf": [
            {
              "type": "string",
              "pattern": "arn:[a-z-]+:mq:[a-z0-9-]+:\\d+:broker:[A-Za-z0-9/_+=.@-]+:b-[a-z0-9-]+"
            },
            {
              "$ref": "cf.functions.json#/FnImportValue"
            },
            {
              "$ref": "cf.functions.json#/FnRef"
            }
        ]
      },
      "basicAuthArn": {
        "anyOf": [
            {
              "$ref": "common.json#/AwsSecretsManagerArnString"
            },
            {
              "$ref": "cf.functions.json#/FnImportValue"
            },
            {
              "$ref": "cf.functions.json#/FnRef"
            }
        ]
      },
      "batchSize": {
        "type": "number",
        "minimum": 1,
        "maximum": 10000
      },
      "maximumBatchingWindow": {
        "type": "number",
        "minimum": 0,
        "maximum": 300
      },
      "enabled": {
        "type": "boolean"
      },
      "queue": {
        "type": "string"
      },
      "filterPatterns": {
        "$ref": "common.json#/AwsFilterPatterns"
      }
    },
    "additionalProperties": false,
    "required": [
      "basicAuthArn",
      "arn",
      "queue"
    ]
  },
  "AwsSns": {
    "title": "AwsSns",
    "description": "Event definition for Aws Sns topics",
    "properties": {
      "displayName": {
        "type": "string"
      },
      "filterPolicy": {
        "anyOf": [
          {
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          {
            "additionalProperties": {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            "type": "object"
          }
        ]
      },
      "redrivePolicy": {
        "$ref": "#/AwsSnsRedrivePolicy"
      },
      "topicName": {
        "type": "string",
        "maxLength": 256,
        "pattern": "^[\\w-]+$"
      },
      "arn": {
        "$ref": "common.json#/AwsArnString"
      },
      "filterPolicyScope": {
        "type": "string"
      }
    },
    "type": "object",
    "anyOf": [{ "required": ["arn"] }, { "required": ["topicName"] }],
    "additionalProperties": false
  },
  "AwsSnsRedrivePolicy": {
    "properties": {
      "deadLetterTargetArn": {
        "$ref": "common.json#/AwsArnString"
      },
      "deadLetterTargetImport": {
        "$ref": "#/AwsSnsDeadLetterTargetImport"
      },
      "deadLetterTargetRef": {
        "type": "string",
        "minLength": 1
      }
    },
    "type": "object",
    "additionalProperties": false,
    "oneOf": [
      { "required": ["deadLetterTargetArn"] },
      { "required": ["deadLetterTargetRef"] },
      { "required": ["deadLetterTargetImport"] }
    ]
  },
  "AwsSnsDeadLetterTargetImport": {
    "properties": {
      "arn": {
        "type": "string"
      },
      "url": {
        "type": "string"
      }
    },
    "type": "object"
  },
  "AwsSqs": {
    "properties": {
      "arn": {
        "anyOf": [
          {
            "$ref": "cf.functions.json#/FnRef"
          },
          {
            "$ref": "common.json#/AwsArnString"
          }
        ]
      },
      "batchSize": {
        "type": ["string", "number"]
      },
      "enabled": {
        "type": "boolean"
      },
      "maximumRetryAttempts": {
        "type": ["string", "number"]
      }
    },
    "type": "object"
  },
  "required": [
    "AwsActiveMq",
    "AwsSns",
    "AwsSnsDeadLetterTargetImport",
    "AwsSnsRedrivePolicy",
    "AwsSqs"
  ]
}
