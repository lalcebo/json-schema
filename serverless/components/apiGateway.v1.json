{
  "id": "https://raw.githubusercontent.com/lalcebo/json-schema/master/serverless/apiGateway.v1.json/HttpCors.json",
  "schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "File containing similar api gateway related configurations",
  "additionalProperties": false,
  "AwsHttpCors": {
    "description": "Enable cors or customizing cors response. Source:- https://www.serverless.com/framework/docs/providers/aws/events/apigateway#enabling-cors",
    "oneOf": [
      {
        "type": "boolean",
        "default": false
      },
      {
        "title": "AwsHttpCors",
        "type": "object",
        "additionalProperties": false,
        "description": "Full custom configuration for cors",
        "properties": {
          "allowCredentials": {
            "type": "boolean"
          },
          "cacheControl": {
            "type": "string"
          },
          "headers": {
            "oneOf": [
              {
                "items": {
                  "type": "string",
                  "default": [
                    "Content-Type",
                    "X-Amz-Date",
                    "Authorization",
                    "X-Api-Key",
                    "X-Amz-Security-Token",
                    "X-Amz-User-Agent",
                    "X-Amzn-Trace-Id"
                  ]
                },
                "type": "array"
              },
              {
                "type": "string",
                "enum": [
                  "*"
                ]
              }
            ]
          },
          "maxAge": {
            "type": "number"
          },
          "origins": {
            "oneOf": [
              {
                "items": {
                  "type": "string"
                },
                "type": "array"
              },
              {
                "type": "string",
                "default": "*"
              }
            ]
          }
        }
      }
    ]
  },
  "required": [
    "AwsHttpCors"
  ]
}
